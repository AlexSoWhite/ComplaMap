<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/RootFrame"
        android:foreground="#ff000000"
        >
    <androidx.fragment.app.FragmentContainerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Container"
            />
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
        >
<ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_backward_24"
        android:src="@drawable/ic_backward_24"
        android:background="@color/white"
        android:id="@+id/ExitButton"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Адрес"
        android:textSize="20sp"

        />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_rectangle_background"
            android:drawableEnd="@drawable/ic_location_24"
android:id="@+id/Address"
            android:inputType="text"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Описание проблемы"
        android:textSize="20sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/rounded_rectangle_background"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:padding="5dp"
        android:id="@+id/Description"
            />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Категория проблемы"
        android:textSize="20sp"
        android:gravity="center|left"
            />

    <Spinner

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:entries="@array/SpinnerItems"
        android:background="@drawable/rounded_rectangle_background"

            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="left|center"
        android:text="Фото"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
                android:src="@drawable/ic_baseline_add_photo_24"
                android:id="@+id/AddPhotoButton"
                android:layout_gravity="center"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
                android:src="@drawable/photo"
                android:id="@+id/Image"/>
    </LinearLayout>
    <ImageButton

            style="@style/Widget.Design.FloatingActionButton"
            android:id="@+id/AddButton"
            android:layout_gravity="bottom|center"
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:layout_marginTop="75dp"
            android:src="@drawable/ic_check_24"
            />

</LinearLayout>

</FrameLayout>