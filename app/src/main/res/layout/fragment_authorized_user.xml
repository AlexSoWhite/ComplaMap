<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
                name="user"
                type="com.example.complamap.model.User" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
            android:id="@+id/profile_header"
            android:layout_width="287dp"
            android:layout_marginTop="33dp"
            android:layout_marginStart="19dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >
        <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/photo"
            />
        <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_marginStart="93dp"
                tools:text="Имя пользователя"
                android:text="@{user.username.toString()}"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
            />
        <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="27dp"
                android:layout_marginStart="93dp"
                tools:text="рейтинг 5.5"
                android:text='@{"рейтинг "+user.rating.toString()}'
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
            />
    </FrameLayout>

    <FrameLayout
            android:id="@+id/logOut"
            android:background="@drawable/sign_in_button_background"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="end"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Выход"
                style="@style/textButtonStyle" />

    </FrameLayout>


    <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_header"
            app:layout_constraintStart_toStartOf="@+id/profile_header"
            tools:text="email: sample@email.com"
            android:text='@{"email: "+user.email.toString()}'
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:textSize="18sp"
        />

    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            app:layout_constraintTop_toBottomOf="@id/email"
            app:layout_constraintStart_toStartOf="@id/email">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>