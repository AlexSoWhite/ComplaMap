<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/take_photo_background_grey"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

        <ImageView
            android:id="@+id/img"
            android:layout_width="300dp"
            android:layout_height="400dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/take_photo_camera_btn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_margin="20dp"
            />

        <Button
            android:id="@+id/send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/take_photo_camera_btn"
            android:layout_margin="20dp"
            android:text="@string/send"
            android:visibility="invisible"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/send_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/take_photo_gallery_btn"
            app:layout_constraintTop_toBottomOf="@id/send_button"
            android:textSize="11sp"
            android:layout_margin="20dp"/>

        <FrameLayout
            android:id="@+id/take_photo_camera_btn"
            android:layout_width="142dp"
            android:layout_height="78dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="171dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/take_photo_frames_border"
            android:clickable="true"
            android:focusable="true"
            />

        <TextView
            android:id="@+id/camera_text"
            android:layout_height="21dp"
            android:layout_width="65dp"
            app:layout_constraintTop_toTopOf="@+id/take_photo_camera_btn"
            app:layout_constraintStart_toStartOf="@+id/take_photo_camera_btn"
            app:layout_constraintEnd_toEndOf="@+id/take_photo_camera_btn"
            android:layout_marginTop="18dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="@string/camera"/>

        <FrameLayout
            android:id="@+id/take_photo_gallery_btn"
            android:layout_width="142dp"
            android:layout_height="78dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="171dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/take_photo_frames_border"
            android:clickable="true"
            android:focusable="true"
            />

        <TextView
            android:id="@+id/gallery_text"
            android:layout_height="21dp"
            android:layout_width="69dp"
            app:layout_constraintTop_toTopOf="@+id/take_photo_gallery_btn"
            app:layout_constraintStart_toStartOf="@+id/take_photo_gallery_btn"
            app:layout_constraintEnd_toEndOf="@+id/take_photo_gallery_btn"
            android:layout_marginTop="18dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="@string/gallery"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>