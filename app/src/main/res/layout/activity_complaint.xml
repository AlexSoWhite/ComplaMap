<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
                name="complaint"
                type="com.example.complamap.model.Complaint" />

        <variable
                name="creator"
                type="com.example.complamap.model.User" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">


        <ImageButton
                android:background="@color/white"
                android:drawableStart="@drawable/ic_backward_24"
                android:id="@+id/ExitButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_backward_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/icon" />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/profilePic"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="30dp"
                    android:maxHeight="100dp"
                    android:paddingVertical="5dp"
                    android:src="@drawable/ic_baseline_image_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/textView"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_width="60dp"
                    android:text="адрес:"
                    android:textAppearance="?attr/textAppearanceSubtitle2"
                    app:layout_constraintStart_toEndOf="@+id/profilePic"
                    app:layout_constraintTop_toTopOf="@+id/profilePic" />

            <TextView
                    android:id="@+id/address"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:inputType="textMultiLine"
                    android:background="@android:color/transparent"
                    android:textAppearance="@style/BodyLight"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:layout_marginStart="10dp"
                    android:text="@{complaint.location.toString()}"
                    app:layout_constraintStart_toEndOf="@+id/textView"
                    app:layout_constraintTop_toTopOf="@+id/textView"
                    tools:text="address one two three four five six seven eight nine 11 " />

            <TextView
                    android:id="@+id/textView2"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_width="60dp"
                    android:text="статус:"
                    android:textAppearance="?attr/textAppearanceSubtitle2"
                    app:layout_constraintStart_toStartOf="@+id/textView"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />


            <TextView
                    android:id="@+id/status"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@{complaint.status}"
                    android:layout_marginStart="10dp"
                    android:textAppearance="?attr/textAppearanceBody1"
                    app:layout_constraintBottom_toBottomOf="@+id/textView2"
                    app:layout_constraintStart_toEndOf="@+id/textView2"
                    tools:text="Принято" />

            <TextView
                    android:id="@+id/textView3"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_width="60dp"
                    android:text="автор:"
                    android:textAppearance="?attr/textAppearanceSubtitle2"
                    app:layout_constraintStart_toStartOf="@+id/textView"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                    android:id="@+id/user"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@{@string/creator_info(creator.username, creator.rating.toString())}"
                    android:textAppearance="?attr/textAppearanceBody1"
                    app:layout_constraintBottom_toBottomOf="@+id/textView3"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@+id/textView3"
                    tools:text="Креатор" />

            <TextView
                    android:id="@+id/date"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@{complaint.creation_date.toDate().toString()}"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:layout_marginTop="5dp"
                    app:layout_constraintStart_toStartOf="@+id/profilePic"
                    app:layout_constraintTop_toBottomOf="@+id/textView3"
                    tools:text="date" />

            <TextView
                    android:id="@+id/category"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_width="wrap_content"
                    android:text="@{complaint.category}"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    app:layout_constraintStart_toStartOf="@+id/profilePic"
                    app:layout_constraintTop_toBottomOf="@+id/date"
                    tools:text="Транспорт" />

            <TextView
                    android:id="@+id/textView6"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:text="Описание:"
                    android:textAppearance="?attr/textAppearanceSubtitle2"
                    app:layout_constraintStart_toStartOf="@+id/profilePic"
                    app:layout_constraintTop_toBottomOf="@+id/category" />

            <TextView
                    android:id="@+id/description"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:ellipsize="end"
                    android:maxHeight="300dp"
                    android:layout_marginTop="6dp"
                    android:text="@{complaint.description}"
                    android:textAppearance="?attr/textAppearanceBody1"
                    app:layout_constraintStart_toStartOf="@+id/textView6"
                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                    tools:text="Описание" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="04.01.2000"
                    android:textAppearance="?attr/textAppearanceCaption"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/description"
                    tools:text="ред. 04.01.2000" />

            <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="64dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>